<div id="column-left" class="pull-left">
  <div id="balance" class="pull-left"><%= dashboard.balance.confirmed %></div>
  <div id="coin" class="pull-left"><%= coin.code %></div>
  <div id="balance_label">Account balance</div>
</div>
<div id="column-right" class="pull-right">
  <% if (showWeekAverage) { %>
    <div id="today_label" class="js-average-action">Daily Average</div>
    <div id="today" class="js-average-action"><%= Number(dashboard.creditAvg).toFixed(8) %></div>
  <% } else { %>
    <div id="today_label" class="js-average-action">Past 24 hours</div>
    <div id="today" class="js-average-action"><%= Number(dashboard.recent_credits_24hours.amount).toFixed(8) %></div>
  <% } %>
</div>